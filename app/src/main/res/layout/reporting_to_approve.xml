<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#55ACA5"
    android:layout_height="match_parent">

    <include layout="@layout/window_title" />
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_gravity = "center"
        android:orientation="vertical">

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/sv_profile_scroll"
            android:layout_width="match_parent"
            android:padding="5dp"
            android:gravity="center"
            android:layout_height="wrap_content">


            <LinearLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:padding="15dp"
                android:layout_marginRight="2dp"
                android:orientation="vertical">

                <LinearLayout
                    android:background="@drawable/back_leave"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="3dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="Employee ID"
                        android:textColor="@color/text_color_1"
                        android:textSize="20sp" />


                    <TextView
                        android:id="@+id/tv_emp_id"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.8"
                        android:text=":"
                        android:gravity="center_vertical"
                        android:textColor="@color/text_color_3"
                        android:textSize="20sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/back_leave"
                    android:padding="10dp"
                    android:layout_marginTop="3dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="Name "
                        android:textColor="@color/text_color_1"
                        android:textSize="20sp" />


                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="0dp"
                        android:text=":"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.8"
                        android:gravity="center_vertical"
                        android:textColor="@color/text_color_3"
                        android:textSize="20sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/back_leave"
                    android:padding="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="Leave Date"
                        android:textColor="@color/text_color_1"
                        android:textSize="20sp" />


                    <TextView
                        android:id="@+id/tv_leave_date"
                        android:layout_width="0dp"
                        android:text=":"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.8"
                        android:gravity="center_vertical"
                        android:textColor="@color/text_color_3"
                        android:textSize="20sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/back_leave"
                    android:padding="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="left"
                        android:text="Applied Date"
                        android:textColor="@color/text_color_1"
                        android:textSize="20sp" />


                    <TextView
                        android:id="@+id/tv_applied_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.8"
                        android:text=":"
                        android:gravity="center_vertical"
                        android:textColor="@color/text_color_3"
                        android:textSize="20sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/back_leave"
                    android:padding="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="left"
                        android:text="Substitute"
                        android:textColor="@color/text_color_1"
                        android:textSize="20sp" />


                    <TextView
                        android:id="@+id/tv_substitute"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.8"
                        android:text=":"
                        android:gravity="center_vertical"
                        android:textColor="@color/text_color_3"
                        android:textSize="20sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/back_leave"
                    android:padding="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="Type"
                        android:textColor="@color/text_color_1"
                        android:textSize="20sp" />


                    <TextView
                        android:id="@+id/tv_type"
                        android:layout_width="0dp"
                        android:textStyle="bold"
                        android:text=":"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.8"
                        android:gravity="center_vertical"
                        android:textColor="@color/text_color_3"
                        android:textSize="20sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/back_leave"
                    android:padding="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="No of Days"
                        android:textColor="@color/text_color_1"
                        android:textSize="20sp" />


                    <TextView
                        android:text=":"
                        android:id="@+id/tv_no_of_days"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.8"
                        android:gravity="center_vertical"
                        android:textColor="@color/text_color_3"
                        android:textSize="20sp" />

                </LinearLayout>

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

    </LinearLayout>


</RelativeLayout>
