<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="2dp"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        card_view:cardCornerRadius="4dp"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/main_icon_background"
                android:paddingLeft="4dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp">
                    <TextView
                        android:id="@+id/tv_visit_log_name"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:textStyle="bold"
                        android:text="Name"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:gravity="center_vertical"
                        android:drawablePadding="4dp"
                        android:textAllCaps="true"
                        />

                    <TextView
                        android:id="@+id/tv_visit_log_time"
                        android:layout_width="0dp"
                        android:layout_weight="1.5"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:textStyle="bold"
                        android:text="Time"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:gravity="center_vertical"
                        android:drawablePadding="4dp"
                        android:textAllCaps="true"
                        />


                </LinearLayout>

                <TextView
                    android:id="@+id/tv_visit_log_remarks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="2dp"
                    android:text="Remarks"
                    android:textSize="15sp"
                    android:textColor="@android:color/holo_blue_bright"
                    android:gravity="center_vertical"
                    android:drawablePadding="4dp"

                    />

                <TextView
                    android:id="@+id/tv_visit_log_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="Address"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:drawableLeft="@drawable/icon_city"
                    android:gravity="center_vertical"
                    android:drawablePadding="4dp"

                    />

                <TextView
                    android:id="@+id/tv_visit_log_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="Phone"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:drawablePadding="4dp"
                    android:drawableLeft="@drawable/icon_phonenumber"
                    />

