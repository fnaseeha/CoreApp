<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="1dp"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/rl_search_by_location"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:background="@drawable/serach_item_not_selected"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:visibility="gone"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Search By Location"
            android:textColor="@color/white"
            android:textSize="12dp"/>

        <ImageView
            android:id="@+id/iv_search_location_arrow"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/arrow_left"
            android:rotation="270" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_search_location"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone"
        >

        <Button
            android:id="@+id/btn_province"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/curved_button_background"
            android:text="Province"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="12dp" />

        <Button
            android:id="@+id/btn_district"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/curved_button_background"
            android:text="District"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="12dp" />

        <Button
            android:id="@+id/btn_city"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/curved_button_background"
            android:text="City"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="12dp" />


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_search_by_company"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="2.5dp"
        android:background="@drawable/serach_item_not_selected"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="Search By Company"
            android:textColor="@color/black"
            android:textSize="12dp"/>

        <ImageView
            android:id="@+id/iv_search_company_arrow"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/arrow_left"
            android:rotation="270" />

    </RelativeLayout>


    <!--<LinearLayout-->
    <!--android:layout_width="wrap_content"-->
