<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.user.lankabellapps.fragments.CustomerSearchFragment"
    android:background="@color/background_color">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme">

            <!--<android.support.v7.widget.Toolbar-->
            <!--android:id="@+id/toolbar"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="?attr/actionBarSize"-->
            <!--android:background="?attr/colorPrimary"-->
            <!--app:popupTheme="@style/Theme.Design.NoActionBar" />-->
            <!--<include layout="@layout/window_title" />-->

        </android.support.design.widget.AppBarLayout>

        <include layout="@layout/content_customer_fragment" />



    </LinearLayout>

    <ProgressBar
        android:id="@+id/pb_downloadingProgress"
        android:layout_gravity="center|center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:visibility="gone"
        >
    </ProgressBar>


    <!--<android.support.design.widget.FloatingActionButton-->
        <!--android:id="@+id/fab"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_gravity="bottom|end"-->
        <!--android:layout_margin="1dp"-->
        <!--android:src="@drawable/plus"-->
        <!--android:visibility="gone"-->
        <!--/>-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:weightSum="1">


        <com.github.clans.fab.FloatingActionMenu
            android:id="@+id/menu1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            app:fab_colorDisabled="@color/cardViewNotSelectBackground"
            app:fab_colorNormal="@color/colorAccent"
            app:fab_colorPressed="@color/colorPrimaryDark"
            fab:menu_backgroundColor="@android:color/transparent"
            fab:menu_icon="@drawable/plus"
            fab:menu_labels_ellipsize="end"
            fab:menu_labels_singleLine="true"
            fab:menu_labels_cornerRadius="13dp"
            android:layout_margin="10dp">


            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/new_visit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/add_visit"
                app:fab_colorDisabled="@color/cardViewNotSelectBackground"
                app:fab_colorNormal="@color/colorAccent"
                app:fab_colorPressed="@color/colorPrimaryDark"
                fab:fab_label="New Visit"
                fab:fab_size="mini" />

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/fab_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/left_curve_button"
                app:fab_colorDisabled="@color/cardViewNotSelectBackground"
                app:fab_colorNormal="@color/colorAccent"
                app:fab_colorPressed="@color/colorPrimaryDark"
                fab:fab_label="Back"
                fab:fab_size="mini"
                android:visibility="gone"/>

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/fabtoday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/home"
                app:fab_colorDisabled="@color/cardViewNotSelectBackground"
                app:fab_colorNormal="@color/colorAccent"
                app:fab_colorPressed="@color/colorPrimaryDark"
                fab:fab_label="Today"
                fab:fab_size="mini"
                android:visibility="gone"/>

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="80dp"
                android:layout_marginRight="80dp"
                android:src="@drawable/ok"
                android:visibility="gone"
                app:fab_colorNormal="@color/colorAccent"
                app:fab_colorPressed="@color/colorAccent"
                fab:fab_size="normal" />


        </com.github.clans.fab.FloatingActionMenu>


    </RelativeLayout>

</FrameLayout>
