<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.lankabellapps.fragments.VisitLogFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="2dp">

        <TextView
            android:id="@+id/tv_visitlog_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="@drawable/background_button"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_visitlog_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            >

        </android.support.v7.widget.RecyclerView>

        <TextView
            android:id="@+id/tv_not_items_visit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No Items"
            android:textColor="@color/clicked_red"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="35dp"
            android:textSize="15sp"
            android:visibility="gone"/>

    </LinearLayout>




</FrameLayout>
