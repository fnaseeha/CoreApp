<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="2dp"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        card_view:cardCornerRadius="4dp"

        >

        <LinearLayout
            android:id="@+id/ll_cus_item_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="8dp"
            android:background="@drawable/background_button">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/main_icon_background"
            android:paddingLeft="4dp"
            >

            <TextView
                android:id="@+id/tv_cus_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:textStyle="bold"
                android:text="Name"
                android:textColor="@color/colorAccent"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:drawablePadding="4dp"
                android:textAllCaps="true"
                />

            <TextView
                android:id="@+id/tv_cus_item_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="City"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:drawableLeft="@drawable/icon_city"
                android:gravity="center_vertical"
                android:drawablePadding="4dp"

                />

            <TextView
                android:id="@+id/tv_cus_item_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="ID"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:visibility="gone"
                android:drawablePadding="4dp"
                />

            <TextView
                android:id="@+id/tv_cus_item_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="ID"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:drawableLeft="@drawable/icon_phonenumber"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                />

            <TextView
                android:id="@+id/tv_cus_item_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID"
                android:textSize="14sp"
                android:layout_marginTop="3dp"
                android:textColor="@android:color/white"
                android:drawableLeft="@drawable/icon_address"
                android:gravity="center_vertical"
                android:drawablePadding="4dp"
                />


        </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>