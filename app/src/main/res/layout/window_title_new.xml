<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:contentInsetLeft="0dp"
    android:contentInsetStart="0dp"
    app:contentInsetLeft="0dp"
    app:contentInsetStart="0dp"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
    android:paddingTop="3dp"
    android:paddingBottom="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/lay_left"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:color/transparent">

            <!-- <ImageView
                android:id="@+id/img_left_btn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="12dp"
                android:layout_centerVertical="true"
                android:background="@android:drawable/"/> -->
                
           <!--  <ImageView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                 />   -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                android:padding="2dp"
                android:gravity="center"
                >

            <ImageView
                android:id="@+id/iv_menu"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:src="@drawable/menu_icon"
                android:layout_centerVertical="true"
                android:paddingLeft="1dp"
                android:onClick="OnClickBack"
                android:paddingRight="1dp"
                android:visibility="visible"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
               />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:layout_alignParentLeft="true"
                android:textColor="@android:color/white"
                android:textSize="16dp"
                android:layout_centerVertical="true"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/iv_menu"
                android:gravity="center"
                
                 />
                <TextView
                    android:id="@+id/tv_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="V-1.01"
                    android:layout_toLeftOf="@+id/tv_logo"
                    android:textSize="10sp"
                    android:textColor="@android:color/white"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="7dp"
                    android:visibility="gone"
                    android:gravity="center"

                    />

            </LinearLayout>

            
            <ImageView
                android:clickable="true"
                android:id="@+id/tv_sync"
                android:onClick="SyncUnit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_sync"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                 />

        </RelativeLayout>

        <FrameLayout
            android:id="@+id/ll_toolbar_search"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:visibility="gone">

            <EditText
                android:id="@+id/etv_search"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:drawableLeft="@drawable/search"
                android:hint="Search"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:background="@drawable/search_bar_background"
                android:paddingLeft="4dp"
                android:drawablePadding="5dp"
                android:singleLine="true"/>

            <ImageButton
                android:id="@+id/ibtn_searchbar_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:background="@android:color/transparent"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="4dp"
                />
        </FrameLayout>



        
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:visibility="visible"
            android:background="@android:color/transparent" />

    </LinearLayout>
</android.support.v7.widget.Toolbar>
