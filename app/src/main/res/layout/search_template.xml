    <LinearLayout
        android:id="@+id/ll_search_company"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:visibility="gone">

        <EditText
            android:id="@+id/etv_company_code"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/background_edit_text"
            android:gravity="center_vertical"
            android:hint="Company Code"
            android:paddingLeft="3dp"
            android:singleLine="true"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="12dp" />

        <EditText
            android:id="@+id/etv_company_name"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/background_edit_text"
            android:gravity="center_vertical"
            android:hint="Company Name"
            android:paddingLeft="3dp"
            android:singleLine="true"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="12dp" />

        <EditText
            android:id="@+id/et_due_date"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/background_edit_text"
            android:editable="false"
            android:gravity="center_vertical"
            android:hint="Due Date"
            android:paddingLeft="3dp"
            android:singleLine="true"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_calender_customer_search"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:src="@drawable/logout_icon"
            android:textSize="12dp"
            android:visibility="gone" />

        <EditText
            android:id="@+id/etv_contact_no"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/background_edit_text"
            android:gravity="center_vertical"
            android:hint="Contact"
            android:paddingLeft="3dp"
            android:phoneNumber="true"
            android:singleLine="true"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="12dp" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_search_by_date"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="2.5dp"
        android:background="@drawable/serach_item_not_selected"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:visibility="gone"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="Search By Date"
            android:textColor="@color/black"
            android:textSize="12dp"/>

        <ImageView
            android:id="@+id/iv_search_date_arrow"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/arrow_left"
            android:rotation="270" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_start_end_date"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <Button
            android:id="@+id/et_end_date"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/background_edit_text"
            android:gravity="center_vertical"
            android:hint="Start Date"
            android:paddingLeft="3dp"
            android:singleLine="true"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/et_start_date"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/background_edit_text"
            android:gravity="center_vertical"
            android:hint="End Date"
            android:paddingLeft="3dp"
            android:singleLine="true"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:visibility="gone" />

        <!--<Spinner-->
            <!--android:id="@+id/spinner1"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="35dp"-->
            <!--android:layout_gravity="center"-->
            <!--android:layout_weight="1"-->
