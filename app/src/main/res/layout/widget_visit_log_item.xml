                    <!--android:drawableLeft="@drawable/icon_address"-->
                    <!--android:gravity="center_vertical"-->
                    <!--android:drawablePadding="4dp"-->
                    <!--/>-->


            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>